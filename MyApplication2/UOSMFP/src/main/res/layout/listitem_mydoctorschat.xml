<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/mydoctorschat_prof"
        android:layout_width="50dp"
        android:src="@mipmap/ic_launcher_round"
        android:layout_height="50dp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        app:civ_border_width="10dp"
        app:civ_border_color="#05df29"
        android:id="@+id/img_on"

        android:src="@mipmap/ic_launcher_round"
        android:layout_below="@id/mydoctorschat_name"
        android:layout_marginTop="10dp"
        android:layout_marginStart="-15dp"
        android:layout_toEndOf="@+id/mydoctorschat_prof"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        app:civ_border_width="10dp"
        app:civ_border_color="#bfbfbf"
        android:id="@+id/img_off"

        android:src="@mipmap/ic_launcher_round"
        android:layout_below="@id/mydoctorschat_name"
        android:layout_marginTop="10dp"
        android:layout_marginStart="-15dp"
        android:layout_toEndOf="@+id/mydoctorschat_prof"
        />

    <TextView
        android:id="@+id/mydoctorschat_name"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:layout_centerHorizontal="true"
        android:layout_toEndOf="@id/mydoctorschat_prof"
        android:layout_width="wrap_content"
        android:text="Name"
        android:layout_height="wrap_content" />



    <TextView
        android:id="@+id/mydoctorschat_email"
        android:layout_centerVertical="true"
        android:text="E-mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_centerHorizontal="true"
        android:layout_toEndOf="@id/mydoctorschat_name"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mydoctorschat_name"
        android:id="@+id/last_msg"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="5dp"
        android:paddingTop="5dp"
        android:maxLines="1"
        android:layout_toEndOf="@id/mydoctorschat_prof"
        android:layout_marginStart="20dp" />



</RelativeLayout>