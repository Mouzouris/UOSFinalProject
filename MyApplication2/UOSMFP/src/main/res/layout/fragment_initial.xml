<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.InitialFragment">

    <de.hdodenhof.circleimageview.CircleImageView

        android:id="@+id/appimage"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@mipmap/launchericon_round"
        />

    <TextView
        android:padding="20dp"
        android:text="This is a prototype application made from Demetris Mouzouris for my Final Masters Project.
It is made to measure the angle of the leg of the patient and to distribute these data back to the doctor where the patient is approved at."

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appimage"

        />

</RelativeLayout>